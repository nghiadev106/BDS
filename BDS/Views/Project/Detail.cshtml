                                data: { id: id },
                                success: function (result) {
                                    $("#ward").html($('<option/>', { value: 0, text: '[Chọn Xã/Phường]' }));
                                    $.each(result, function (i, item) {
                                        $("#ward").append('<option value="' + item.id + '"> ' + item.name + ' </option>');
                                                });
                                            },
                                error: function (e) {
                                                alert(e);
                                            }
                                        });
                                    });
                                });
                </script>
            </div>
            <div class="uk-width-large-2-3 mb15 uk-pull-1-3">
                <section class="estate-detail mb15">
                    <section class="panel-body">
                        <div class="dv-ct-detail bor_bottom mb10">
                            <h1 class="mb0">@Model.Name</h1>
                        </div>
                        <div class="meta_time mb5">
                            Đăng ngày: @Model.CreateDate.Value.ToString("MM/dd/yyyy")
                        </div>
                        <div class="price_code mb10 uk-flex uk-flex-middle uk-flex-space-between">
                            <div class="price">
                                <span class="label">Giá:</span>
                                <span class="value"><b class="red">@Model.Price</b> @Model.PriceTypeName</span>
                                <span> - Diện tích: <b class="red">@Model.Acreage</b> m²</span>
                            </div>
                            <div class="code uk-clearfix"><span class="label">Mã số tài sản:</span> <span class="value">#@Model.Id</span></div>
