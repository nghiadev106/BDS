                                    $.each(result, function (i, item) {
                                        $("#district").append('<option value="' + item.id + '"> ' + item.name + ' </option>');
                                                });
                                            },
                                error: function (e) {
                                                alert(e);
                                            }
                                        });
                                    });

                        $("#district").on("change", function () {
                                        var id = $("#district").val();
