                                                {
                                                    foreach (var item in Model.Images)
                                                    {
                                                        <li data-thumb="@item.Path">
                                                            <a href="@item.Path" data-uk-lightbox="{group:'gallerys'}" class="img-cover image" title="">
                                                                <img src="@item.Path" alt="" />
                                                            </a>
                                                        </li>
