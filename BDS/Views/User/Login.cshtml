@model BDS.Areas.Admin.Models.Authen.LoginRequest

<input type="hidden" id="success" value="@TempData["success"]" />
<input type="hidden" id="warning" value="@TempData["warning"]" />
<input type="hidden" id="error" value="@TempData["error"]"
<div id="body" class="body-container">
    <div class="breadcrumb">
        <div class="uk-container uk-container-center">
            <ul class="uk-breadcrumb">
                <li>
                    <a href="/" title="Trang chủ">
                        <i class="fa fa-home"></i> Trang chủ
                    </a>
                </li>
                <li class="uk-active">
                    <a href="javascript:void(0)" title="Đăng nhập">Đăng nhập</a>
                </li>
            </ul>
        </div>
    </div>
    <div class="uk-container uk-container-center">
        <div class="uk-grid uk-grid-medium mb20">
            <div class="uk-width-large-1-3">
               
            </div><!-- .uk-width -->
            <div class="uk-width-1-3">
                <section class="login_box">
                    <header class="panel-head">
                        <div class="heading-2"><span>Đăng nhập</span></div>
                    </header>
                    <section class="panel-body height100">
                        <form asp-action="Login" asp-controller="User" method="post" class="uk-form">
                            <div class="uk-grid uk-grid-collapse uk-grid-width-1-1 uk-position-relative">
                                <div class="log login">
                                    <div class="body">
                                        <div class="mb15 form-row">
                                            <input type="text" asp-for="UserNameOrEmail" id="" class="form-control" value="" placeholder="Email or Username" />
                                            <span asp-validation-for="UserNameOrEmail" class="text-danger"></span>
                                        </div>

                                        <div class="mb15 form-row">
                                            <input type="password" asp-for="Password" id="" class="form-control" placeholder="Mật khẩu" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-row uk-text-center">
                                            <input type="submit" name="login" class="uk-button login_button" value="Đăng nhập" />
                                        </div>
                                    </div>
                                    <div>
                                        <a href="/dang-ky">Đăng ký tài khoản</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </section> <!-- .fc-panel-body -->
                </section> <!-- .uk-panel -->
            </div>
        </div><!-- .uk-grid -->
    </div><!-- .uk-container -->
    </section><!-- .index-navigation -->

    <script>
        $(document).ready(function () {
            $('.button-social').click(function () {
                var url = $(this).attr('data-href');
                location.href = url;
            });
        });</script>
